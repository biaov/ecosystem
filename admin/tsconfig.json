{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "useDefineForClassFields": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["vite/client", "node"],

    /* 路径别名 */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* 模块解析策略 */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* 校验 */
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "types/*.d.ts", "package.json", "scripts/route-sql.ts"],
  "exclude": ["node_modules", "dist"]
}
